{%  extends 'template.twig' %}

{% import 'macro.twig'as macro %}

{% block content %}

    <link href="css/form.css" rel="stylesheet">


<div class="container">

    <h1>FORMULAIRE D'INSCRIPTION</h1>

    <form method="post" action="index.php?action=user!control_double">

        {{ macro.input('last_name', 'votre nom','text') }}
        {{ macro.input('first_name', 'votre prénom','text') }}
        {{ macro.input('username', 'votre username','text') }}
        {{ macro.input('user_password', 'votre password','password') }}

        <div class="form-group">
            <label for="question" id="question">Question secrète</label>
            <select class="form-control" name="question">
                <option value="mother">Quel est le prénom de votre mère?</option>
                <option value="pets">Quel était le nom de votre premier animal de compagnie?</option>
                <option value="color">Quelle est votre couleur préférée?</option>
            </select>
        </div>

        {{ macro.input('answer', 'votre réponse','text') }}
        {{ macro.submit('envoyer') }}

    </form>

        <div class=" connexion">
            <a href="index.php?action=user!connexion"> Vous avez déjà un compte </a>
        </div>


</div>

{% endblock %}




