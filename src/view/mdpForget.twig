{%  extends 'template.twig' %}

{% block content %}
<link href="css/form.css" rel="stylesheet">

    <div class="container">

        <h1>FORMULAIRE DE RE INITIALISATION DE MOT DE PASSE</h1>

        <form id="connexion" method="post" action="index.php?action=back!watch_question">

                <div class="form-group">
                    <label  for="username">Votre pseudo</label>
                    <input  type="text" class="form-control" id="username" aria-describedby="pseudo" placeholder="Votre username" name="username"required="required" value="{{ user.username }}">
                </div>

        {% if user.question is defined  %}
            {% if user.question == 'mother'  %}
                <div>  Quel est le prénom de votre mère?</div>
            {% elseif user.question == 'pets'  %}
                <div>Quel était le nom de votre premier animal de compagnie?</div>
            {% elseif user.question == 'color'  %}
                <div>Quelle est votre couleur préférée?</div>
             {% else %}
                <div style="color:red">Désolée, une erreur s'est produite</div>
            {% endif %}

            {% if user.question == 'mother' or user.question == 'pets' or user.question == 'color' %}
        </form>
                 <form id="connexion" method="post" action="index.php?action=back!control_question">
                        <div class="form-group">
                            <label for="answer">Votre réponse</label>
                            <input type="text" class="form-control" id="answer" aria-describedby="answer" placeholder="Votre réponse" name="answer" required="required">
                        </div>

                        <div class="form-group">
                            <input type="submit" id="submit" value="envoyer" />
                        </div>
                 </form>
            {% endif %}

        {% else %}
                <div class="form-group">
                    <input type="submit" id="submit" value="afficher la question secrete" />
                </div>
            </form>
        {% endif %}



     </div>

{% endblock %}
