{%  extends 'template.twig' %}

{% block content %}

<link href="css/form.css" rel="stylesheet">

    <h1>FORMULAIRE DE CONNEXION</h1>

    <form id="connexion" method="post" action="index.php?action=back!check_mdp">

        <div class="form-group">
            <label  for="username">Votre username</label>
            <input  type="text" class="form-control" id="username" aria-describedby="username" placeholder="Votre username" name="username" value="{{ username }}">
        </div>

        <div class="form-group">
            <label  for="user_password">Votre mot de passe</label>
            <input  type="password" class="form-control" id="user_password" aria-describedby="user_password" placeholder="Votre mot de passe" name="user_password" required="required">
        </div>

        {{ erreur|raw }}

        <div class="form-group">
            <label id="connexion" for="checkbox">Se souvenir de moi</label>
            <input type="checkbox" id="checkbox" name="checkbox" placeholder="Votre checkbox" >
        </div>

        <div class="form-group">
            <input type="submit" id="submit" value="Connexion" />
        </div>

        <div>
            <a href="index.php?action=user!mdp_forget">Mot de passe oublié</a>
        </div>
        <div>
            <a href="index.php?action=user!inscription">Créer un compte</a>
        </div>

    </form>

{% endblock %}


